/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	h1,
	.h1 {
		@apply text-4xl font-black;
	}

	h2,
	.h2 {
		@apply text-2xl font-black;
	}

	h3,
	.h3 {
		@apply text-xl font-bold;
	}

	p,
	.p {
		@apply font-medium;
	}

	pre {
		@apply !bg-transparent;
	}
}
